{
  "editor.rulers": [100],  // Default line length
  "editor.formatOnSave": false,
  "[python]": {
    "editor.rulers": [88],
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[sql]": {
    "editor.rulers": [88], // For consistency with SQL embedded in Python code
    "editor.defaultFormatter": "dorzey.vscode-sqlfluff",
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  // "python.defaultInterpreterPath": "python",
  "autoDocstring.docstringFormat": "google",
  "sonarlint.analysisExcludesStandalone": "**/analysis/**,**/site-packages/**",
  "sqlfluff.config": "${workspaceFolder}/.sqlfluff",
  "mypy-type-checker.ignorePatterns": ["**/analysis/**"]
}
